<?xml version="1.0"?>
<launch>
    <!-- world configs -->
    <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find angelshark_sim)/models"/>
    <env name="GAZEBO_RESOURCE_PATH" value="${GAZEBO_RESOURCE_PATH}:$(find angelshark_sim)/models"/>

    <arg name="world_name" default="$(find angelshark_sim)/worlds/mcity.world"/>
    <arg name="gui" default="true"/>
    <arg name="verbose" default="true"/>

    <include file="$(find angelshark_sim)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="verbose" value="true"/>
        <arg name="world" value="$(arg world_name)"/>
    </include>
</launch>
