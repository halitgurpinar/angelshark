<?xml version="1.0"?>
<launch>
    <arg name="robot_name" default="angelshark"/>
    <arg name="show" default="true"/>
    <arg name="device" default="/dev/video0"/>
    
    <group ns="angelshark">
        <node name="camera" pkg="usb_cam" type="usb_cam_node" respawn="true" >
            <param name="video_device" value="$(arg device)" />
            <param name="image_width" value="640" />
            <param name="image_height" value="480" />
            <param name="pixel_format" value="yuyv" />
            <param name="camera_frame_id" value="camera" />
            <param name="io_method" value="mmap"/>
        </node>
    </group>
    <group if="$(eval arg('show') == true)">
        <node name="image_view" pkg="image_view" type="image_view" respawn="false">
            <remap from="image" to="/$(arg robot_name)/camera/image_raw"/>
            <param name="autosize" value="true" />
        </node>
    </group>
</launch>
